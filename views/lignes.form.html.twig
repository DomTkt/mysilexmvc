<h2>Formulaire</h2>

{% if ligne is defined %}
<form method="post" name="formulaire" action="{{ url('lignes.save', {id: ligne.id}) }}">

    <input type="hidden" name="id" value={{ligne.id}} />

    <label for="name">Nom : </label>
    <input type="text" name="nom" value={{ligne.nom}} />

    <label for="name">Prénom : </label>
    <input type="text" name="prenom" value={{ligne.prenom}}  />
    
    <label for="name">Age : </label>
    <input type="text" name="age" value={{ligne.age}}  />
    {% else %}
<form method="post" name="formulaire" action="{{ url('lignes.save') }}">
    <label for="name">Nom : </label>
    <input type="text" name="nom" />

    <label for="name">Prénom : </label>
    <input type="text" name="prenom" />
    
    <label for="name">Age : </label>
    <input type="text" name="age" />
    {% endif %}

    <button type="submit">Envoyer</button>

</form>
